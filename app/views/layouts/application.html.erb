<!DOCTYPE html>
<html>
<head>
  <title>Nomster</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<nav class="navbar navbar-inverse" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Nomster', root_path, class: 'navbar-brand' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li>
          <%= link_to new_place_path do %>
            <i class= "glyphicon glyphicon-plus-sign"></i> 
            New Place
          <% end %> 
        </li> 
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to 'My Profile', user_path(current_user) %></li>
          <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'Sign in', new_user_session_path %></li>
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
        <% end %> 
      </ul>
    </div>
  </div>
</nav>

<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

<br class="clr" />

<div id="footer">
  <div class="container">
  
      <div class="col-xs-12 col-sm-6 foot-space text-center">
        <b>Created by Christopher Ross</b>
        <br />
        <%= link_to 'http://www.crossphd.com', :target => "_blank" do %>
          <%= image_tag 'crossphd.jpg', class: 'social-button' %>
        <% end %>
        <%= mail_to "chris@crossphd.com" do %>
          <span>chris@crossphd.com</span>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-6 foot-space text-center social">
        <b>Social</b>
        <br>
        <%= link_to 'https://twitter.com/crossphd', :target => "_blank" do %>
          <%= image_tag 'twitter2.png', class: 'social-button' %>
        <% end %>
        <%= link_to 'https://github.com/CRossPhD', :target => "_blank" do %>
          <%= image_tag 'github2.png', class: 'social-button' %>
        <% end %>
        <%= link_to 'https://medium.com/@crossphd', :target => "_blank" do %>
          <%= image_tag 'medium2.png', class: 'social-button' %>
        <% end %>
      </div>
  </div>
</div>

</body>
</html>
